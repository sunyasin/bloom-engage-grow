# Supabase Configuration (for frontend)
VITE_SUPABASE_PROJECT_ID=your_project_id
VITE_SUPABASE_PUBLISHABLE_KEY=your_publishable_key
VITE_SUPABASE_URL=https://your-project.supabase.co
VITE_SUPABASE_ANON_KEY=your_anon_key

# Supabase Service Role Key (for backend auth only - NEVER expose to client)
# Get this from: Supabase Dashboard → Settings → API → service_role key
SUPABASE_SERVICE_ROLE_KEY=your_service_role_key_here

# Prisma Database URL (for backend DB access)
# Get password from: Supabase Dashboard → Settings → Database → Connection string → URI
# Format: postgresql://postgres:[YOUR-PASSWORD]@db.[YOUR-PROJECT-REF].supabase.co:5432/postgres
DATABASE_URL=postgresql://postgres:[YOUR-PASSWORD]@db.[YOUR-PROJECT-REF].supabase.co:5432/postgres

# Backend Server Configuration
PORT=3001
FRONTEND_URL=http://localhost:5173

# Backend API URL (for frontend to connect to backend)
VITE_BACKEND_URL=http://localhost:3001

# YooKassa Payment Configuration
# Get these from: https://yookassa.ru → Settings → API Protocol
YOOKASSA_SHOP_ID=your_shop_id_here
YOOKASSA_SECRET_KEY=your_secret_key_here
